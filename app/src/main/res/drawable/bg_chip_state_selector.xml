<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ei_primary" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Unchecked state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/ei_surface_dark" />
            <stroke android:width="1dp" android:color="@color/ei_border" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
