<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with glow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/ei_primary_glow" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Foreground -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/ei_primary" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
