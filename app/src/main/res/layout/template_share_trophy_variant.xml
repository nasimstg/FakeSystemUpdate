<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/share_gold_bg"
    android:orientation="vertical">

    <!-- Header bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="14dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_trophy"
            android:tint="@color/share_gold_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:letterSpacing="0.08"
            android:text="@string/share_FAKE_SYS_UPDATE_awards"
            android:textColor="@color/share_gold_primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- Rare Drop badge -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/share_gold_primary"
            android:fontFamily="monospace"
            android:letterSpacing="0.05"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="@string/share_rare_drop"
            android:textColor="@color/share_gold_bg"
            android:textSize="9sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="28dp"
        android:paddingBottom="28dp">

        <!-- Trophy emoji -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="\uD83C\uDFC6"
            android:textSize="72sp" />

        <!-- Achievement unlocked banner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="#33F4C025"
            android:fontFamily="monospace"
            android:letterSpacing="0.1"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="ACHIEVEMENT UNLOCKED"
            android:textColor="@color/share_gold_primary"
            android:textSize="10sp"
            android:textStyle="bold" />

        <!-- Master of Patience -->
        <TextView
            android:id="@+id/text_achievement_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/share_master_of_patience"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold|italic" />

        <!-- Description -->
        <TextView
            android:id="@+id/text_achievement_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="@string/share_trophy_desc"
            android:textColor="#AAFFFFFF"
            android:textSize="13sp" />

        <!-- Stats chips row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <!-- Rage Level -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="#1AFFFFFF"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="@string/share_rage_level"
                    android:textColor="#66FFFFFF"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/text_rage_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="0% Detected"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- XP Gained -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="#1AFFFFFF"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="@string/share_xp_gained"
                    android:textColor="#66FFFFFF"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/text_xp_gained"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="+500 XP"
                    android:textColor="@color/share_gold_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Footer: branding + QR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_bolt"
                        android:tint="@color/share_gold_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@string/share_branding"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="monospace"
                    android:text="#825-GLITCH-WIN"
                    android:textColor="#44FFFFFF"
                    android:textSize="8sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:contentDescription="@null"
                android:src="@drawable/frame_qr_code" />

        </LinearLayout>

        <!-- Verification footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="@string/share_verification"
            android:textColor="#33FFFFFF"
            android:textSize="8sp" />

    </LinearLayout>

</LinearLayout>
