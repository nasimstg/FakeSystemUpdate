<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="32dp">

    <!-- Icon container with rings -->
    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="160dp">

        <!-- Outer ring -->
        <View
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_welcome_ring_outer" />

        <!-- Glow behind icon -->
        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:alpha="0.2"
            android:background="@drawable/bg_cyan_glow" />

        <!-- Main icon circle -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_welcome_icon_circle">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_system_update"
                app:tint="@color/electric_blue" />
        </FrameLayout>

        <!-- Version badge -->
        <TextView
            android:id="@+id/text_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_badge_chip"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textColor="@color/electric_blue"
            android:textSize="11sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- Title: "Welcome to" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/onboarding_welcome_line1"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- Title: "Fake Update" in cyan -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/onboarding_welcome_line2"
        android:textColor="@color/electric_blue"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:maxWidth="280dp"
        android:text="@string/onboarding_welcome_subtitle"
        android:textColor="@color/slate_400"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp" />

</LinearLayout>
