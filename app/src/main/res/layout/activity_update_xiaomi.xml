<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xiaomi_dark_bg">

    <!-- Center content group -->
    <LinearLayout
        android:id="@+id/center_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/info_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- MIUI 16 Logo -->
        <FrameLayout
            android:id="@+id/logo_container"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_xiaomi_logo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="16"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- MIUI 16 Title -->
        <TextView
            android:id="@+id/text_miui_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/xiaomi_miui_title"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <!-- Large Percentage Display -->
        <LinearLayout
            android:id="@+id/percent_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="96sp" />

            <TextView
                android:id="@+id/text_percent_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:alpha="0.6"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="32sp" />

        </LinearLayout>

        <!-- Updating system... -->
        <TextView
            android:id="@+id/text_update_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/xiaomi_installing"
            android:textColor="#FF00D4FF"
            android:textSize="18sp" />

        <!-- Don't turn off your device -->
        <TextView
            android:id="@+id/text_do_not_turn_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/xiaomi_do_not_turn_off"
            android:textColor="#FFAAAAAA"
            android:textSize="14sp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_update"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="40dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_xiaomi" />

        <!-- Download info row -->
        <LinearLayout
            android:id="@+id/download_info_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_downloading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/xiaomi_downloading"
                android:textColor="#FF888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_download_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xiaomi_download_size"
                android:textColor="#FF888888"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/info_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/neutral_surface"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/buttons_row"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Device icon with cyan circle background -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_green_dot" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_smartphone"
                    app:tint="#FF00D4FF" />

            </FrameLayout>

            <!-- Version info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_version_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xiaomi_version_info"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/xiaomi_stable_size"
                    android:textColor="#FFAAAAAA"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- WHAT'S NEW button -->
            <TextView
                android:id="@+id/btn_whats_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:text="@string/xiaomi_whats_new"
                android:textColor="#FF00D4FF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Two buttons row -->
    <LinearLayout
        android:id="@+id/buttons_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/text_powered_by"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stop"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/xiaomi_stop"
            android:textColor="#FFAAAAAA"
            app:cornerRadius="12dp"
            app:strokeColor="#FF666666"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reboot"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#1A00D4FF"
            android:text="@string/xiaomi_reboot_now"
            android:textColor="#FF00D4FF"
            app:cornerRadius="12dp"
            app:strokeColor="#FF00D4FF"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:id="@+id/text_powered_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:letterSpacing="0.15"
        android:text="@string/xiaomi_powered_by"
        android:textAllCaps="true"
        android:textColor="#FF666666"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Info Icon (appears after 15 seconds) -->
    <ImageView
        android:id="@+id/iv_info_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_dialog_info"
        android:contentDescription="@string/info_icon_desc"
        android:visibility="gone"
        android:alpha="0"
        app:tint="#8000D4FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
