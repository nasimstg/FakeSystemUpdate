<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal_dark"
    android:fitsSystemWindows="true">

    <!-- Skip button (top-right, hidden on welcome & accept pages) -->
    <TextView
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:text="@string/onboarding_btn_skip"
        android:textColor="@color/slate_400"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Dot indicators (top-left on how-it-works, centered on others) -->
    <LinearLayout
        android:id="@+id/dot_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/dot_0"
            android:layout_width="32dp"
            android:layout_height="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_dot_pill_active" />

        <View
            android:id="@+id/dot_1"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_dot_pill_inactive" />

        <View
            android:id="@+id/dot_2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/bg_dot_pill_inactive" />

    </LinearLayout>

    <!-- ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dot_container" />

    <!-- Action button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_action"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/electric_blue"
        android:text="@string/onboarding_btn_start"
        android:textColor="@color/charcoal_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_play_arrow"
        app:iconGravity="end"
        app:iconTint="@color/charcoal_dark"
        app:layout_constraintBottom_toTopOf="@id/text_terms_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- "By continuing, you agree to our Terms of Service" link (welcome page only) -->
    <TextView
        android:id="@+id/text_terms_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:text="@string/onboarding_terms_agree"
        android:textColor="@color/slate_500"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
