<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_black">

    <!-- Center content group -->
    <LinearLayout
        android:id="@+id/center_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Glow + Update Icon -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp">

            <View
                android:id="@+id/icon_glow"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:alpha="0.2"
                android:background="@drawable/bg_green_dot" />

            <ImageView
                android:id="@+id/icon_update"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_pixel_update"
                app:tint="@color/electric_blue" />

        </FrameLayout>

        <!-- Installing text -->
        <TextView
            android:id="@+id/text_update_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/pixel_installing"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- Do not turn off -->
        <TextView
            android:id="@+id/text_do_not_turn_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/pixel_do_not_turn_off"
            android:textColor="@color/pixel_text_secondary"
            android:textSize="14sp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_update"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="48dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_pixel" />

        <!-- Percentage (subtle / hidden) -->
        <TextView
            android:id="@+id/text_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:alpha="0"
            android:text="0%"
            android:textColor="@color/pixel_text_secondary"
            android:textSize="14sp"
            android:visibility="invisible" />

    </LinearLayout>

    <!-- Info Icon (appears after 15 seconds) -->
    <ImageView
        android:id="@+id/iv_info_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_dialog_info"
        android:contentDescription="@string/info_icon_desc"
        android:visibility="gone"
        android:alpha="0"
        app:tint="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
