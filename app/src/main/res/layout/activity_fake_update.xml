<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_black">

    <!-- Background glow -->
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:alpha="0.05"
        android:background="@drawable/bg_green_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Center content group -->
    <LinearLayout
        android:id="@+id/center_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/text_recovery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Spinning circle + Gear icon overlay -->
        <FrameLayout
            android:id="@+id/icon_container"
            android:layout_width="96dp"
            android:layout_height="96dp">

            <ProgressBar
                android:id="@+id/spinner"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="@color/electric_blue" />

            <ImageView
                android:id="@+id/icon_gear"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:alpha="0.8"
                android:contentDescription="@null"
                android:src="@drawable/ic_settings"
                app:tint="@color/white" />

        </FrameLayout>

        <!-- Percentage -->
        <TextView
            android:id="@+id/text_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="0%"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_update"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="40dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_update" />

        <!-- Status text -->
        <TextView
            android:id="@+id/text_update_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:text="@string/stock_installing"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!-- Warning text -->
        <TextView
            android:id="@+id/text_do_not_turn_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="48dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="@string/stock_restart_warning"
            android:textColor="@color/update_subtext"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Footer: Recovery text -->
    <TextView
        android:id="@+id/text_recovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="monospace"
        android:letterSpacing="0.15"
        android:text="@string/stock_recovery_text"
        android:textAllCaps="true"
        android:textColor="#FF666666"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/text_build_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_build_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="monospace"
        android:text="@string/stock_build_number"
        android:textColor="#FF777777"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Info Icon (appears after 15 seconds) -->
    <ImageView
        android:id="@+id/iv_info_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_dialog_info"
        android:contentDescription="@string/info_icon_desc"
        android:visibility="gone"
        android:alpha="0"
        app:tint="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
