<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal_dark"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@id/btn_start_prank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="16dp">

            <!-- ==================== HEADER ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Title column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_setup"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/subtitle_setup"
                        android:textColor="@color/text_secondary_dark"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Settings button -->
                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/title_settings"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/text_secondary_dark" />

            </LinearLayout>

            <!-- ==================== DEVICE INFO CARD ==================== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_device_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/charcoal_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Icon + device info row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Circular cyan icon container -->
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_cyan">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_smartphone"
                                app:tint="@color/electric_blue" />

                        </FrameLayout>

                        <!-- Device info text -->
                        <TextView
                            android:id="@+id/text_device_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_weight="1"
                            android:lineSpacingExtra="4dp"
                            android:textColor="@color/text_secondary_dark"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <!-- Optimized badge -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_check_circle"
                            app:tint="@color/electric_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/label_optimized"
                            android:textColor="@color/electric_blue"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ==================== SETTINGS CARD ==================== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/charcoal_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="20dp">

                    <!-- Update Style -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:text="@string/label_update_style"
                        android:textAllCaps="true"
                        android:textColor="@color/text_secondary_dark"
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_style"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundColor="@color/charcoal_dark"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:endIconTint="@color/text_secondary_dark"
                        app:hintEnabled="false">

                        <AutoCompleteTextView
                            android:id="@+id/dropdown_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:paddingVertical="14dp"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Duration -->
                    <!-- Label row: title left, value right -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:letterSpacing="0.1"
                            android:text="@string/label_update_duration"
                            android:textAllCaps="true"
                            android:textColor="@color/text_secondary_dark"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/text_duration_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/electric_blue"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:stepSize="5"
                        android:value="30"
                        android:valueFrom="5"
                        android:valueTo="120"
                        app:thumbColor="@color/electric_blue"
                        app:trackColorActive="@color/electric_blue"
                        app:trackColorInactive="@color/progress_track" />

                    <!-- INSTANT / ETERNAL labels under slider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="monospace"
                            android:text="@string/label_duration_instant"
                            android:textColor="@color/text_tertiary_dark"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="@string/label_duration_eternal"
                            android:textColor="@color/text_tertiary_dark"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/divider_dark" />

                    <!-- Keep Awake toggle row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Icon box -->
                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_icon_box">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_visibility"
                                app:tint="@color/text_secondary_dark" />

                        </FrameLayout>

                        <!-- Title + subtitle -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_keep_screen_on"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:text="@string/hint_keep_screen_on"
                                android:textColor="@color/text_secondary_dark"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_screen_on"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="@color/electric_blue"
                            app:trackTint="@color/progress_track" />

                    </LinearLayout>

                    <!-- Screen Pinning toggle row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Icon box -->
                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_icon_box">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_lock"
                                app:tint="@color/text_secondary_dark" />

                        </FrameLayout>

                        <!-- Title + subtitle -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_app_pinning"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/text_app_pinning_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:text="@string/hint_app_pinning"
                                android:textColor="@color/text_secondary_dark"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_app_pinning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="@color/electric_blue"
                            app:trackTint="@color/progress_track" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/divider_dark" />

                    <!-- Exit Method -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:letterSpacing="0.1"
                        android:text="@string/label_exit_method"
                        android:textAllCaps="true"
                        android:textColor="@color/text_secondary_dark"
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_exit_method"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundColor="@color/charcoal_dark"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:endIconTint="@color/text_secondary_dark"
                        app:hintEnabled="false">

                        <AutoCompleteTextView
                            android:id="@+id/dropdown_exit_method"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:paddingVertical="14dp"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ==================== SCHEDULE CARD ==================== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/charcoal_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Schedule row: icon + text + schedule mode dropdown -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Orange circle icon -->
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_orange">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_timer"
                                app:tint="@color/xiaomi_orange" />

                        </FrameLayout>

                        <!-- Title + subtitle -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_schedule_start"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:text="@string/hint_schedule_start"
                                android:textColor="@color/text_secondary_dark"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Schedule Mode Toggle Group -->
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggle_schedule_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:checkedButton="@id/btn_mode_now"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_mode_now"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="@string/label_mode_now"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ic_play_arrow"
                            app:iconGravity="textStart"
                            app:iconSize="14dp"
                            app:iconTint="@color/white"
                            app:strokeColor="@color/card_border_dark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_mode_delay"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="@string/label_mode_delay"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ic_hourglass"
                            app:iconGravity="textStart"
                            app:iconSize="14dp"
                            app:iconTint="@color/white"
                            app:strokeColor="@color/card_border_dark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_mode_datetime"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="@string/label_mode_datetime"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ic_event"
                            app:iconGravity="textStart"
                            app:iconSize="14dp"
                            app:iconTint="@color/white"
                            app:strokeColor="@color/card_border_dark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_mode_interval"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="@string/label_mode_interval"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ic_repeat"
                            app:iconGravity="textStart"
                            app:iconSize="14dp"
                            app:iconTint="@color/white"
                            app:strokeColor="@color/card_border_dark" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <!-- Delay Picker Group -->
                    <LinearLayout
                        android:id="@+id/group_delay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:letterSpacing="0.1"
                                android:text="@string/label_delay_after"
                                android:textAllCaps="true"
                                android:textColor="@color/text_secondary_dark"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/text_delay_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/electric_blue"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/slider_delay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:stepSize="1"
                            android:value="5"
                            android:valueFrom="1"
                            android:valueTo="60"
                            app:thumbColor="@color/electric_blue"
                            app:trackColorActive="@color/electric_blue"
                            app:trackColorInactive="@color/progress_track" />

                        <!-- Unit selector: Min / Hrs / Days -->
                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/toggle_delay_unit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            app:checkedButton="@id/btn_unit_min"
                            app:selectionRequired="true"
                            app:singleSelection="true">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_unit_min"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="@string/label_unit_min"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                app:cornerRadius="10dp"
                                app:strokeColor="@color/card_border_dark" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_unit_hrs"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="@string/label_unit_hrs"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                app:cornerRadius="10dp"
                                app:strokeColor="@color/card_border_dark" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_unit_days"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="@string/label_unit_days"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                app:cornerRadius="10dp"
                                app:strokeColor="@color/card_border_dark" />

                        </com.google.android.material.button.MaterialButtonToggleGroup>

                    </LinearLayout>

                    <!-- Date/Time Picker Group -->
                    <LinearLayout
                        android:id="@+id/group_datetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Horizontal row: Date + Time buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_pick_date"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/btn_pick_date"
                                android:textColor="@color/electric_blue"
                                android:textSize="13sp"
                                app:cornerRadius="12dp"
                                app:icon="@drawable/ic_event"
                                app:iconGravity="textStart"
                                app:iconSize="18dp"
                                app:iconTint="@color/electric_blue"
                                app:strokeColor="@color/card_border_dark" />

                            <android.widget.Space
                                android:layout_width="8dp"
                                android:layout_height="0dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_pick_time"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/btn_pick_time"
                                android:textColor="@color/electric_blue"
                                android:textSize="13sp"
                                app:cornerRadius="12dp"
                                app:icon="@drawable/ic_timer"
                                app:iconGravity="textStart"
                                app:iconSize="18dp"
                                app:iconTint="@color/electric_blue"
                                app:strokeColor="@color/card_border_dark" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_scheduled_datetime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:textColor="@color/electric_blue"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </LinearLayout>

                    <!-- Interval Picker Group -->
                    <LinearLayout
                        android:id="@+id/group_interval"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:letterSpacing="0.1"
                                android:text="@string/label_interval_hours"
                                android:textAllCaps="true"
                                android:textColor="@color/text_secondary_dark"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/text_interval_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/electric_blue"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/slider_interval"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:stepSize="1"
                            android:value="4"
                            android:valueFrom="1"
                            android:valueTo="24"
                            app:thumbColor="@color/electric_blue"
                            app:trackColorActive="@color/electric_blue"
                            app:trackColorInactive="@color/progress_track" />

                    </LinearLayout>

                    <!-- Cancel Scheduled Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_cancel_schedule"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/btn_cancel_schedule"
                        android:textColor="#FFFF5252"
                        android:visibility="gone"
                        app:cornerRadius="12dp"
                        app:strokeColor="#FFFF5252" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ==================== TIP TEXT ==================== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/tip_exit"
                android:textColor="@color/text_tertiary_dark"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- ==================== BOTTOM START BUTTON ==================== -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_prank"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/btn_start_prank"
        android:textColor="@color/charcoal_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/electric_blue"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_play_arrow"
        app:iconGravity="textStart"
        app:iconTint="@color/charcoal_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
