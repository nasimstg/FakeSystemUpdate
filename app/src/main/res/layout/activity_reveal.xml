<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mesh_gradient"
    android:fitsSystemWindows="true">

    <!-- Close Button (top-right) -->
    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_circle_white_10"
        android:contentDescription="@string/btn_new_prank"
        android:src="@drawable/ic_close"
        app:tint="#B0FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Center content group -->
    <LinearLayout
        android:id="@+id/center_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/layout_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_close">

        <!-- Emoji with glow -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/emoji_glow"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:alpha="0.15"
                android:background="@drawable/bg_cyan_glow" />

            <TextView
                android:id="@+id/text_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/reveal_emoji"
                android:textSize="140sp" />

        </FrameLayout>

        <!-- "YOU GOT" -->
        <TextView
            android:id="@+id/text_heading_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:letterSpacing="-0.02"
            android:text="@string/reveal_heading_line1"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold" />

        <!-- "PRANKED!" in cyan -->
        <TextView
            android:id="@+id/text_heading_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.02"
            android:text="@string/reveal_heading_line2"
            android:textColor="@color/electric_blue"
            android:textSize="48sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:paddingHorizontal="40dp"
            android:text="@string/reveal_subtitle"
            android:textColor="@color/slate_400"
            android:textSize="15sp" />

        <!-- Stats Badges Row -->
        <LinearLayout
            android:id="@+id/layout_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

            <!-- Time Wasted Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge_chip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_timer"
                    app:tint="@color/electric_blue" />

                <TextView
                    android:id="@+id/text_time_wasted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/reveal_time_wasted"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <android.widget.Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <!-- Gotcha Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge_chip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_favorite"
                    app:tint="@color/accent_pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/reveal_gotcha"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom gradient fade -->
    <View
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_bottom_fade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/btn_view_pranks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- NEW PRANK (Primary) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_new_prank"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="@string/btn_new_prank"
            android:textColor="@color/charcoal_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@color/electric_blue"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_refresh"
            app:iconGravity="textStart"
            app:iconSize="18dp"
            app:iconTint="@color/charcoal_dark" />

        <!-- SHARE (Outlined) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="@string/btn_share"
            android:textColor="@color/electric_blue"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_share"
            app:iconGravity="textStart"
            app:iconSize="18dp"
            app:iconTint="@color/electric_blue"
            app:strokeColor="@color/electric_blue_30"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <!-- Website Promotion Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_view_pranks"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/btn_view_pranks"
        android:textColor="@color/electric_blue"
        android:textSize="13sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_public"
        app:iconGravity="textStart"
        app:iconSize="18dp"
        app:iconTint="@color/electric_blue"
        app:strokeColor="@color/electric_blue_30"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
