<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/share_green_bg"
    android:orientation="vertical">

    <!-- Header bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A0DF259"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_warning"
            android:tint="@color/share_green_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:letterSpacing="0.08"
            android:text="@string/share_system_failure"
            android:textColor="@color/share_green_primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/bg_dot_active" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="monospace"
            android:text="@string/share_sys_ver"
            android:textColor="#66FFFFFF"
            android:textSize="9sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="28dp"
        android:paddingTop="28dp"
        android:paddingBottom="24dp">

        <!-- Total time section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:letterSpacing="0.15"
            android:text="@string/share_total_time_wasted"
            android:textColor="#88FFFFFF"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/text_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="monospace"
            android:text="14:23"
            android:textColor="@color/white"
            android:textSize="52sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:letterSpacing="0.15"
            android:text="@string/share_minutes_seconds"
            android:textColor="#55FFFFFF"
            android:textSize="9sp" />

        <!-- Panic gauge -->
        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp">

            <ImageView
                android:id="@+id/image_panic_gauge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:layerType="software" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_panic_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="85%"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.1"
                    android:text="@string/share_panic_level"
                    android:textColor="#88FFFFFF"
                    android:textSize="9sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="#330DF259"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.1"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="@string/share_critical"
                    android:textColor="@color/share_green_primary"
                    android:textSize="8sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="28dp"
            android:background="@color/share_green_dim" />

        <!-- Target identified -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:letterSpacing="0.05"
                android:text="@string/share_target_identified"
                android:textColor="#66FFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/text_target_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1AFFFFFF"
                android:fontFamily="monospace"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Dad"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Reaction log -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="monospace"
            android:letterSpacing="0.05"
            android:text="@string/share_reaction_log"
            android:textColor="#66FFFFFF"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/text_reaction_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="4dp"
            android:text="@string/reaction_panicked"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp" />

        <!-- Footer: branding + QR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_bolt"
                        android:tint="@color/share_green_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@string/share_branding"
                        android:textColor="@color/share_green_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/share_prank_complete"
                    android:textColor="#55FFFFFF"
                    android:textSize="9sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:contentDescription="@null"
                android:src="@drawable/frame_qr_code" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
