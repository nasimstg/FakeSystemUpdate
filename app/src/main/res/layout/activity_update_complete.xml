<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_black">

    <!-- Phase 1: "Update installed successfully" -->
    <LinearLayout
        android:id="@+id/layout_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="48dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@null"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/complete_update_installed"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/complete_restarting"
            android:textColor="@color/update_subtext"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Phase 2: "Optimizing system..." (matches Stitch reboot transition design) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_optimizing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Center group: glow + spinner + text -->
        <LinearLayout
            android:id="@+id/center_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/footer_build"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Spinner (no background glow) -->
            <ProgressBar
                android:id="@+id/spinner"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/white" />

            <!-- Optimizing text -->
            <TextView
                android:id="@+id/text_optimizing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/complete_optimizing"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <!-- Do not turn off -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:letterSpacing="0.05"
                android:text="@string/complete_do_not_turn_off"
                android:textColor="@color/update_subtext"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Footer build info -->
        <LinearLayout
            android:id="@+id/footer_build"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:letterSpacing="0.15"
                android:text="@string/transition_build_info"
                android:textAllCaps="true"
                android:textColor="#FF777777"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="\u2022"
                android:textColor="#FF555555"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:letterSpacing="0.15"
                android:text="@string/transition_keep_alive"
                android:textColor="@color/electric_blue"
                android:textSize="10sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
