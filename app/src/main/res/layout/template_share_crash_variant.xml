<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/share_navy_bg"
    android:orientation="vertical"
    android:padding="28dp">

    <!-- Top status bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@color/share_navy_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="monospace"
            android:letterSpacing="0.08"
            android:text="@string/share_system_status_critical"
            android:textColor="@color/share_navy_red"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Error icon -->
    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_warning"
        android:tint="@color/share_navy_primary" />

    <!-- FATAL EXCEPTION -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/share_fatal_exception"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- @VictimName tag -->
    <TextView
        android:id="@+id/text_victim_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="User @GullibleFriend"
        android:textColor="@color/share_navy_red"
        android:textSize="12sp" />

    <!-- Terminal log section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#0DFFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:lineSpacingExtra="6dp"
            android:text="@string/share_init_prank"
            android:textColor="@color/share_navy_primary"
            android:textSize="11sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="6dp"
            android:text="@string/share_scanning"
            android:textColor="@color/share_navy_primary"
            android:textSize="11sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="6dp"
            android:text="@string/share_bypass"
            android:textColor="@color/share_navy_primary"
            android:textSize="11sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="6dp"
            android:text="@string/share_uploading"
            android:textColor="@color/share_navy_primary"
            android:textSize="11sp" />

        <!-- Progress bar -->
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="73"
            android:progressDrawable="@drawable/progress_bar_update"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="6dp"
            android:text="@string/share_error_laugh"
            android:textColor="@color/share_navy_red"
            android:textSize="11sp" />

    </LinearLayout>

    <!-- Footer: Generated by + QR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="@string/share_generated_by"
                android:textColor="#44FFFFFF"
                android:textSize="9sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_bolt"
                    android:tint="@color/share_navy_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/share_branding"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:contentDescription="@null"
            android:src="@drawable/frame_qr_code" />

    </LinearLayout>

</LinearLayout>
