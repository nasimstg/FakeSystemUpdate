<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_black">

    <!-- Background gear icon (spins slowly in code) -->
    <ImageView
        android:id="@+id/bg_gear"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:alpha="0.03"
        android:contentDescription="@null"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Center content group -->
    <LinearLayout
        android:id="@+id/center_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/text_build_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Android robot icon -->
        <ImageView
            android:id="@+id/icon_android"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_android_robot"
            app:tint="@color/oneplus_green" />

        <!-- OxygenOS brand text -->
        <TextView
            android:id="@+id/text_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/oneplus_brand"
            android:textColor="@color/oneplus_green"
            android:textSize="24sp" />

        <!-- Large Percentage Display -->
        <LinearLayout
            android:id="@+id/percent_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="96sp" />

            <TextView
                android:id="@+id/text_percent_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:alpha="0.6"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="32sp" />

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_update"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="40dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_oneplus" />

        <!-- Updating system... -->
        <TextView
            android:id="@+id/text_update_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/oneplus_installing"
            android:textColor="#FFE0E0E0"
            android:textSize="18sp" />

        <!-- Do not turn off your device -->
        <TextView
            android:id="@+id/text_do_not_turn_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/oneplus_do_not_turn_off"
            android:textColor="#FF888888"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Build number footer -->
    <TextView
        android:id="@+id/text_build_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="monospace"
        android:letterSpacing="0.1"
        android:text="@string/oneplus_build_number"
        android:textAllCaps="true"
        android:textColor="#FF666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/text_version_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Play Protect footer -->
    <TextView
        android:id="@+id/text_version_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/oneplus_play_protect"
        android:textColor="#FF777777"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Info Icon (appears after 15 seconds) -->
    <ImageView
        android:id="@+id/iv_info_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_dialog_info"
        android:contentDescription="@string/info_icon_desc"
        android:visibility="gone"
        android:alpha="0"
        app:tint="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
