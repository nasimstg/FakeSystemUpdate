<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gamer_gradient"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- ACHIEVEMENT UNLOCKED banner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/share_gamer_gold"
        android:fontFamily="monospace"
        android:gravity="center"
        android:letterSpacing="0.15"
        android:padding="8dp"
        android:text="@string/share_achievement_unlocked"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Achievement title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/share_master_trickster"
        android:textColor="@color/share_gamer_gold"
        android:textSize="26sp"
        android:textStyle="bold" />

    <!-- Trophy emoji -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="ðŸ†"
        android:textSize="72sp" />

    <!-- Victim name -->
    <TextView
        android:id="@+id/text_victim_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Target: PlayerName"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Story text -->
    <TextView
        android:id="@+id/text_achievement_story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="Executed an epic system update prank."
        android:textColor="#99FFFFFF"
        android:textSize="13sp" />

    <!-- Stats grid container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Time stat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_time_hero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="14:23"
                android:textColor="@color/share_gamer_gold"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="monospace"
                android:text="TIME WASTED"
                android:textColor="#66FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="48dp"
            android:background="#33FFFFFF" />

        <!-- XP stat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_xp_gained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="+1500 XP"
                android:textColor="@color/share_gamer_purple"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="monospace"
                android:text="XP GAINED"
                android:textColor="#66FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Reaction badge -->
    <TextView
        android:id="@+id/text_reaction_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_badge_red"
        android:fontFamily="monospace"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="âš  CRITICAL FAILURE"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- QR code -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/frame_qr_code" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Prankster signature -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pranked by: "
                android:textColor="#66FFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/text_prankster_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prankster"
                android:textColor="@color/share_gamer_gold"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
