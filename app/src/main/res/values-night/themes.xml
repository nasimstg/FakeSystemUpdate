<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash screen theme -->
    <style name="Theme.FakeSystemUpdate.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/charcoal_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/charcoal_dark</item>
        <item name="postSplashScreenTheme">@style/Theme.FakeSystemUpdate</item>
    </style>

    <!-- Setup screen theme: dark charcoal with electric blue accents (same as day) -->
    <style name="Theme.FakeSystemUpdate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/electric_blue</item>
        <item name="colorPrimaryVariant">@color/electric_blue_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/electric_blue</item>
        <item name="colorSecondaryVariant">@color/electric_blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/charcoal_dark</item>
        <item name="colorSurface">@color/charcoal_surface</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:statusBarColor">@color/charcoal_dark</item>
        <item name="android:navigationBarColor">@color/charcoal_dark</item>
    </style>

    <style name="Theme.FakeUpdate" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackground">@color/pure_black</item>
        <item name="android:statusBarColor">@color/pure_black</item>
        <item name="android:navigationBarColor">@color/pure_black</item>
    </style>

    <style name="Theme.Reveal" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>
